<RootWidget>:
    BoxLayout:
        size: root.size
        TabbedPanel:
            do_default_tab: False
            TabbedPanelItem:
                text: 'heap'
                HeapWidget


<HeapNode>
    size: 50, 50
    color: 0, 0, 0, 1
    canvas.before:
        Color: 
            rgba: root.backgroundColor
        Ellipse:
            size: self.size
            pos: self.pos


<HeapWidget>
    BoxLayout:
        size: root.size
        orientation: 'horizontal'
        Widget:
            id: heapcanvas
            size_hint_x: 0.8
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'add'
                    size_hint_y: 0.8
                    on_release: root.makeHeapNode()
                TextInput:
                    id: entry
                    size_hint_y: 0.2
                    multiline: False
            Button:
                text: 'heapify'
                on_release: root.heapify()
            Button:
                text: 'clear'
                on_release: root.clear()